<h3>Job</h3>

<li class="draggable" draggable="true" title="@JobModel.Detail" @ondragstart="@(() => HandleDragStart(JobModel))">
  <p class="description">@JobModel.Detail</p>
  <p class="last-updated"><small>Updated Time </small>@JobModel.UpdatedTime.ToString("HH:mm.ss tt")</p>
</li>

@code {
  [CascadingParameter] DragDrop01A Container { get; set; }
  [Parameter] public JobModel JobModel { get; set; }

  private void HandleDragStart(JobModel selectedJob)
  {
    Container.DraggingJob = selectedJob;
  }
}